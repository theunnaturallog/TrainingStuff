</head>
<body>
    <div class="container">
        <h1>Calculator</h1>
        <div class="row">
            <div id="operator" class="col-md-4 col-md-offset-2 text-right">
                add
            </div>
        </div>

        <div class="row">
            <div id="operation" class="col-md-4 col-md-offset-2 text-right">
                0
            </div>
        </div>

        <div class="row">
            <div id="result" class="col-md-4 col-md-offset-2 text-right">
                0
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-secondary" data-number="1">1</button>
                <button type="button" class="btn btn-secondary" data-number="2">2</button>
                <button type="button" class="btn btn-secondary" data-number="3">3</button>
                <button type="button" class="btn btn-secondary" data-operator="divide" op-string="/">/</button>
            </div>
        </div>


        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-secondary" data-number="4">4</button>
                <button type="button" class="btn btn-secondary" data-number="5">5</button>
                <button type="button" class="btn btn-secondary" data-number="6">6</button>
                <button type="button" class="btn btn-secondary" data-operator="multiply" op-string="*">*</button>
            </div>
        </div>


        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-secondary" data-number="7">7</button>
                <button type="button" class="btn btn-secondary" data-number="8">8</button>
                <button type="button" class="btn btn-secondary" data-number="9">9</button>
                <button type="button" class="btn btn-secondary" data-operator="subtract" op-string="-">-</button>
            </div>
        </div>


        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-secondary" disabled>&nbsp;&nbsp;</button>
                <button type="button" class="btn btn-secondary" data-number="0">0</button>
                <button type="button" class="btn btn-secondary" disabled>&nbsp;&nbsp;</button>
                <button type="button" class="btn btn-secondary" data-operator="add" op-string="+">+</button>
            </div>
        </div>


        <div class="row">
            <button class="btn btn-primary col-md-offset-4">Calculate</button>
            <button class="btn btn-primary">Clear</button>
        </div>


    </div>



    <script>
        var numberClickFunc = function () {
            var innerHtml = $('#result').html()
            
            if ($.trim(innerHtml) == "0" || $.trim(innerHtml) == "+" || $.trim(innerHtml) == "-" || $.trim(innerHtml) == "*" || $.trim(innerHtml) == "/") {
                innerHtml = $(this).attr('data-number');
            }
            
            else { innerHtml += $(this).attr('data-number'); }

            $('#result').html(innerHtml);
        };


        var operatorClickFunc = function () {
            var lastOperation = $.trim($('#operator').html());
            
            

            $('#operator').html($(this).attr('data-operator'));
            var resultField = $('#result').html();
            var operatorField = resultField + ' ' + $(this).text().toString();

            $('#operation').html(operatorField);
            $('#result').html($(this).attr('op-string'));

        };

        $( document ).ready()
        {
            $('button[data-number]').click(numberClickFunc);
            $('button[data-operator]').click(operatorClickFunc);
        };


    </script>
</body>


